<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/info_new',book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
       
          <% @users.each do |user| %>
           <tbody>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "60x60" %>
              <% else %>
                <%= image_tag 'no_image.jpeg' %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",user_path(user.id) %></td>
          </tr>
          </tbody>
          <% end %>
        
      </table>
    </div>

    </div>
</div>
