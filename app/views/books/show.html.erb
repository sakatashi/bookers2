<%= render 'books/user_info', user: @user %>
<%= render 'books/info_new',book: @book%>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
  		  <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.profile_image, size: '60x60' if @user.profile_image.attached? %>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: 'btn btn-sm btn-danger' %></td>
          <% end %>
        </tr>
      </table>
    </div>

    </div>
</div>
